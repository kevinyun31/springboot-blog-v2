{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header"><b>회원가입을 해주세요</b></div>
        <div class="card-body">
            <form action="/join" method="post" enctype="multipart/form-data" onsubmit="return valid()">

                <div class="mb-3">
                    <input type="text" id="username" class="form-control" placeholder="Enter username" name="username" onchange="user">
                    <button type="button" class="btn btn-warning" onclick="check()">중복체크</button>
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="password" >
                </div>

                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="Enter email" name="email">
                </div>

                <div class="mb-3">
                    <input type="file" class="form-control" placeholder="Enter file" name="pic">
                </div>
                
                <button id="btnJoin" type="submit" class="btn btn-primary form-control">회원가입</button>
            </form>
        </div>
    </div>
</div>

<script>
      async function saveReply() {
        let requestBody = {
            boardId: document.querySelector("#boardId").value,
            comment: document.querySelector("#comment").value
        };

        console.log(requestBody);

        let response = await fetch("/api/reply/save", {
            method: "post",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(requestBody)
        });

        let responseBody = await response.json();
        console.log(requestBody);
        if (responseBody.success) {
            location.reload(); // ssr = 서버사이드 렌더링 
        } else {
            alert(responseBody.data);
        }
    }
</script>
